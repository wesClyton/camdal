# top-most EditorConfig file
root = true

# Aplicar essas configurações a todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
quote_type = double

# Arquivos Markdown (mantém espaços em branco)
[*.md]
trim_trailing_whitespace = false

# Arquivos JSON com indentação de 4 espaços
[*.json]
indent_size = 4
