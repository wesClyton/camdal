---
import AtendimentoHumanizado from "../components/AtendimentoHumanizado.astro";
import Avaliacoes from "../components/Avaliacoes.astro";
import BannerReserva from "../components/BannerReserva.astro";
import CarrouselCarros from "../components/CarrouselCarros";
import ComoFunciona from "../components/ComoFunciona.astro";
import ContainerPage from "../components/ContainerPage.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Localizacao from "../components/Localizacao.astro";
import RodeComCamdal from "../components/RodeComCamdal.astro";
import Layout from '../layouts/Layout.astro';
